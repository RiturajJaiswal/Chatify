<Window x:Class="ChatifyClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Chatify - Secure Chat" Height="600" Width="900"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#007ACC"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#3E3E42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Login View -->
        <Grid x:Name="LoginView" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <StackPanel>
                <TextBlock Text="Welcome to Chatify" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#007ACC"/>
                <TextBlock Text="Username" Margin="0,0,0,5" Foreground="#AAAAAA"/>
                <TextBox x:Name="UsernameInput" Height="35" FontSize="14"/>

                <TextBlock Text="Server URL" Margin="0,10,0,5" Foreground="#AAAAAA"/>
                <TextBox x:Name="ServerUrlInput" Height="35" FontSize="14" Text="http://localhost:8000"/>

                <Button x:Name="ConnectBtn" Content="Connect" Margin="0,20,0,0" Height="40" Click="ConnectBtn_Click"/>
                <TextBlock x:Name="StatusText" Text="" Foreground="#FF5555" Margin="0,10,0,0" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Chat View -->
        <Grid x:Name="ChatView" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Background="#252526" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Online Users" FontSize="16" FontWeight="SemiBold" Margin="15,15,15,10" Foreground="#888888"/>
                    <ListBox x:Name="UsersList" Grid.Row="1" Margin="10" DisplayMemberPath="Username" SelectionChanged="UsersList_SelectionChanged"/>
                </Grid>
            </Border>

            <!-- Chat Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Background="#2D2D30" Padding="15" Grid.Row="0">
                    <TextBlock x:Name="ChatHeader" Text="Select a user to start chatting" FontSize="16" FontWeight="Bold"/>
                </Border>

                <!-- Messages -->
                <ListBox x:Name="MessagesList" Grid.Row="1" Margin="10">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#333333" CornerRadius="5" Padding="10,5" Margin="0,2">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Sender}" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Content}" Grid.Column="1" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Time}" Grid.Column="2" Foreground="#666666" FontSize="10" VerticalAlignment="Bottom" Margin="10,0,0,0"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Input -->
                <Grid Grid.Row="2" Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="MessageInput" Height="40" FontSize="14" VerticalContentAlignment="Center" KeyDown="MessageInput_KeyDown"/>
                    <Button x:Name="SendBtn" Content="Send" Grid.Column="1" Width="80" Height="40" Margin="10,0,0,0" Click="SendBtn_Click"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
